{
  "compileOnSave": false,
  "buildOnSave": false,
  "compilerOptions": {
    "target": "es5",
    "module": "es2015",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "skipDefaultLibCheck": true,
    "lib": [ "es2015", "es2016", "dom" ],
    "types": [ "node" ]
  },
  "include": [
    "ClientApp"
  ],
  "exclude": ["ClientApp/server.aot.ts"],
  "atom": { "rewriteTsconfig": false },
  "awesomeTypescriptLoaderOptions": {
    "useWebpackText": true,
    "useTranspileModule": true,
    "doTypeCheck": true,
    "forkChecker": true
  }
}

