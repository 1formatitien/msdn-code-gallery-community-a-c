<Window x:Class="AutocompleteWpfSample.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525" FontSize="13">
    <Grid>
        <StackPanel>
            <TextBlock Margin="0,10,0,50" FontSize="16" TextWrapping="Wrap" VerticalAlignment="Top" HorizontalAlignment="Center">
                Autocomplete Sample in <Span FontWeight="Bold">WPF</Span>
            </TextBlock>
            <TextBox Width="300" Padding="5, 3, 5, 3" KeyUp="TextBox_KeyUp" Name="textBox" />
            <Border Width="298" Height="150" BorderBrush="Black" BorderThickness="1">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Name="resultStack"></StackPanel>
                </ScrollViewer>
            </Border>
        </StackPanel>
    </Grid>
</Window>
