<Window x:Class="SplashScreen.MainWindow"
       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SA Theme" Height="350" Width="525" WindowStartupLocation="CenterScreen" Style="{DynamicResource ModalWindowStyle}" Foreground="#FFFFFFFF">
    <Window.CommandBindings>
        <CommandBinding Command="Close"
        Executed="CloseCommand_Executed"/>
    </Window.CommandBindings>

    <Grid>
        <Grid.Background>
            <ImageBrush/>
        </Grid.Background>
        <Label Content="Main Window" Height="47" HorizontalAlignment="Left" Margin="194,133,0,0" Name="label1" VerticalAlignment="Top" FontSize="15" Width="168" />
    </Grid>
</Window>